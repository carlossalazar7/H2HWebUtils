<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <xsd:element name="RequestHeader">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="Authentication">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element type="xsd:string" name="UserName"/>
                            <xsd:element type="xsd:string" name="Password"/>
                        </xsd:sequence>
                    </xsd:complexType>
                </xsd:element>
                <xsd:element name="Region">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element type="xsd:string" name="SourceBank"/>
                            <xsd:element type="xsd:string" name="DestinationBank"/>
                        </xsd:sequence>
                    </xsd:complexType>
                </xsd:element>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
</xsd:schema>